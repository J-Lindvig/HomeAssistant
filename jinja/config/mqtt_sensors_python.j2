{% macro python_code() %}
sensors = {
{%- for rf_command in mqtt_commands %}
  {% set is_number = (rf_command | int) > 0 -%}
  {{ '"'~rf_command~'"' if not is_number else rf_command }}: ["{{ mqtt_commands[rf_command][0] }}", "{{ mqtt_commands[rf_command][1] }}", "{{ mqtt_commands[rf_command][2] }}"],
{%- endfor %}
{%- for sensor in on_sensors %}
  {% set rf_command = on_sensors[sensor][1] -%}
  {% set is_number = (rf_command | int) > 0 -%}
  {{ '"'~rf_command~'"' if not is_number else rf_command }}: ["{{ on_sensors[sensor][0] }}", "ON", "false"],
{%- endfor %}
{%- for sensor in on_off_sensors %}
  {% set rf_command_on = on_off_sensors[sensor][1]~on_off_sensors[sensor][3] | default(open_suffix) -%}
  {% set rf_command_off = on_off_sensors[sensor][1]~on_off_sensors[sensor][4] | default(close_suffix) -%}
  {% set is_on_number = (rf_command_on | int) > 0 -%}
  {% set is_off_number = (rf_command_off | int) > 0 -%}
  {{ '"'~rf_command_on~'"' if not is_on_number else rf_command_on }}: ["{{ on_off_sensors[sensor][0] }}", "ON", "true"],
  {{ '"'~rf_command_off~'"' if not is_off_number else rf_command_off }}: ["{{ on_off_sensors[sensor][0] }}", "OFF", "true"]{{ ',' if not loop.last }}
{%- endfor %}
}
payload = data.get("payload")

if payload is not None:
  if payload in sensors.keys():
    service_data = {"topic": "home/{}".format(sensors[payload][0]), "payload":"{}".format(sensors[payload][1]), "qos":0, "retain":"{}".format(sensors[payload][2])}
  else:
    service_data = {"topic":"home/unknown", "payload":"{}".format(payload), "qos":0, "retain":"false"}
    logger.warning("<rfbridge_demux> Received unknown RF command: {}".format(payload))
  hass.services.call("mqtt", "publish", service_data, False)
{% endmacro %}

