    reload_mqtt_sensors:
      alias: "Genindlæs MQTT sensorer"
      icon: mdi:reload
      description: "Genindlæs MQTT, Grupper, Templates og Scripts"
      mode: single
      sequence:
        - service: automation.reload
        - service: mqtt.reload
        - service: template.reload
        - service: group.reload

